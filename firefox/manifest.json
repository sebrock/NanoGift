{
    "manifest_version": 2,
    "name": "NanoGift",
    "version": "1.2",
    "icons": {
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png"
    },
    "description": "Tip nano",
    
    "browser_action": {
        "default_icon": "icons/icon-32.png",
        "theme_icons": [{
            "light": "icons/icon-32.png",
            "dark": "icons/icon-32.png",
            "size": 32
        }],
        "default_title": "NanoGift",
        "default_popup": "popup/tip.html"
    },
    
    "permissions": [
        "<all_urls>",
        "activeTab",
        "webRequest",
        "clipboardWrite"
    ]
}
